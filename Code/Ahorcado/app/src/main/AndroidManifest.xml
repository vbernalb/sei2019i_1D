<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ahorcado">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_segurity_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.Presentation.PlayActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.Presentation.WordActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.Presentation.ScoreActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.Presentation.CategoryActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.Presentation.MenuUserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.Presentation.MenuAdminActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.Presentation.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity

            android:name="com.Presentation.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>